<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Parenthesis\WPBundle\Entity\User"
            table="users"
            repository-class="Parenthesis\WPBundle\Repository\UserRepository"
            change-tracking-policy="DEFERRED_IMPLICIT">

        <!-- Mapped super classes won't support indexes -->
        <indexes>
            <index columns="user_login" name="user_login_key" />
            <index columns="user_nicename" name="user_nicename" />
        </indexes>

        <id name="id" type="bigint" column="ID">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <one-to-many field="metas" target-entity="Parenthesis\WPBundle\Entity\UserMeta" mapped-by="user" />

    </entity>
</doctrine-mapping>
