<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Parenthesis\WPBundle\Entity\Term"
            table="terms"
            repository-class="Parenthesis\WPBundle\Repository\TermRepository"
            change-tracking-policy="DEFERRED_IMPLICIT">

        <!-- Mapped super classes won't support indexes -->
        <indexes>
            <index columns="name" name="name" />
            <index columns="slug" name="slug" />
        </indexes>

        <id name="id" type="bigint" column="term_id">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <one-to-many field="taxonomies" target-entity="Parenthesis\WPBundle\Entity\TermTaxonomy" mapped-by="term" />
    </entity>
</doctrine-mapping>
